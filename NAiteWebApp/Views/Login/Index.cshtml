@{
    Layout = null;
    ViewData["Title"] = "ログイン";
}

<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="/assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="/assets/img/favicon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>@ViewData["Title"] - NAite</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/assets/css/material-dashboard.css" />
    <link rel="stylesheet" href="~/assets/demo/demo.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NAiteWebApp.styles.css" asp-append-version="true" />
</head>
<body class="off-canvas-sidebar">
    <div class="wrapper wrapper-full-page">
        <div class="page-header login-page header-filter" filter-color="black">
            <!--   you can change the color of the filter page using: data-color="blue | purple | green | orange | red | rose " -->
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-8 col-sm-10 ml-auto mr-auto">
                        <form class="form" method="post" role="form" id="my-app" v-on:submit.prevent="doSubmit">
                            <div class="card card-login card-hidden">
                                <div style="margin: 0 15px;" class="mt-3">
                                    <div style="width:296px;" class="m-auto">
                                        <img class="w-100" src="~/img/logo.png" />
                                    </div>
                                </div>
                                <div style="margin: 0 15px;">
                                    <div id="msg" class="row"></div>
                                    <div id="result" class="post-result form-control-feedback with-errors"></div>
                                </div>
                                <div class="card-body mr-4 ml-4">
                                    <div class="bmd-form-group">
                                        <div class="form-group has-feedback has-custom-error" :class="{ 'has-error': errors.has('loginId') }">
                                            <input type="text" class="form-control" placeholder="ログインID"
                                                   id="loginId" name="loginId" v-model="loginId" data-vv-as="ログインID"
                                                   v-validate="'required'">
                                            <div class="help-block with-errors" v-show="errors.has('loginId')">
                                                <ul class="list-unstyled">
                                                    <li v-cloak>{{ errors.first('loginId') }}</li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="bmd-form-group">
                                        <div class="form-group has-feedback has-custom-error" :class="{ 'has-error': errors.has('password') }">
                                            <input type="password" class="form-control" placeholder="パスワード"
                                                   id="password" name="password" v-model="password" data-vv-as="パスワード"
                                                   v-validate="'required'">
                                            <div class="help-block with-errors" v-show="errors.has('password')">
                                                <ul class="list-unstyled">
                                                    <li v-cloak>{{ errors.first('password') }}</li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer justify-content-center mb-4 pb-3 ml-4 mr-4 pl-3 pr-3">
                                    <button id="btnLogin" type="submit" class="btn btn-fill btn-teal w-100">ログイン</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <footer class="footer">
                <div class="container-fluid">
                    <p>&copy;2024 - NAite</p>
                </div>
            </footer>
        </div>
    </div>
    <script src="~/assets/js/core/jquery.min.js"></script>
    <script src="~/assets/js/core/popper.min.js"></script>
    <script src="~/assets/js/core/bootstrap-material-design.min.js"></script>
    <script src="~/lib/vue@2.6.11.min.js"></script>
    <script src="~/lib/vee-validate.min.js"></script>
    <script src="~/lib/vee-validate-ja.min.js"></script>
    <script src="~/lib/moment-with-locales.js"></script>
    <script src="~/lib/jquery.cookie.min.js"></script>
    <script src="~/assets/js/plugins/perfect-scrollbar.jquery.min.js"></script>
    <script src="~/assets/js/plugins/sweetalert2.js"></script>
    <script src="~/assets/js/material-dashboard.js"></script>
    <script src="~/assets/demo/demo.js"></script>
    <script src="~/js/naite.js" asp-append-version="true"></script>
    <script>
        $(function () {
            // vue init
            naite.initVue();

            $(document).ready(function () {
                md.checkFullPageBackgroundImage();
                setTimeout(function () {
                    // after 1000 ms we add the class animated to the login/register card
                    $('.card').removeClass('card-hidden');
                }, 700);
            });
        });
    </script>
    <script src="~/js/login.js" asp-append-version="true"></script>
</body>
</html>
